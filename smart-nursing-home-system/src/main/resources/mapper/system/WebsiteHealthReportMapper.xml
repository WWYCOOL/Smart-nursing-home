    <select id="getLatestHealthReportByFamilyId" parameterType="Long" resultMap="WebsiteHealthReportResult">
        SELECT h.report_id, h.elderly_id, h.elderly_name, h.report_date, h.report_type, 
               h.doctor_name, h.nurse_name, h.vital_signs, h.blood_pressure, h.heart_rate, 
               h.temperature, h.weight, h.height, h.blood_sugar, h.blood_oxygen, h.symptoms, 
               h.diagnosis, h.treatment, h.medications, h.nursing_notes, h.recommendations, 
               h.next_check_date, h.attachments, h.status, h.create_by, h.create_time, 
               h.update_by, h.update_time, h.remark
        FROM website_health_report h
        INNER JOIN website_family_elderly_relation r ON h.elderly_id = r.elderly_id
        WHERE r.family_id = #{familyId} AND r.bind_status = '1' AND h.status = '0'
        ORDER BY h.report_date DESC
        LIMIT 1
    </select>

