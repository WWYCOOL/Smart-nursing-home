    <sql id="selectWebsiteEntertainmentServicesVo">
        select activity_id, category_id, category_name, category_icon, activity_name, activity_description, activity_time, activity_location, activity_image, sort_order, status, create_by, create_time, update_by, update_time, remark from website_entertainment_services
    </sql>

    <select id="selectWebsiteEntertainmentServicesList" parameterType="WebsiteEntertainmentServices" resultMap="WebsiteEntertainmentServicesResult">
        <include refid="selectWebsiteEntertainmentServicesVo"/>
        <where>  
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="categoryName != null  and categoryName != ''"> and category_name like concat('%', #{categoryName}, '%')</if>
            <if test="categoryIcon != null  and categoryIcon != ''"> and category_icon = #{categoryIcon}</if>
            <if test="activityName != null  and activityName != ''"> and activity_name like concat('%', #{activityName}, '%')</if>
            <if test="activityDescription != null  and activityDescription != ''"> and activity_description = #{activityDescription}</if>
            <if test="activityTime != null  and activityTime != ''"> and activity_time = #{activityTime}</if>
            <if test="activityLocation != null  and activityLocation != ''"> and activity_location = #{activityLocation}</if>
            <if test="activityImage != null  and activityImage != ''"> and activity_image = #{activityImage}</if>
            <if test="sortOrder != null "> and sort_order = #{sortOrder}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by category_id, sort_order
    </select>
    
    <select id="selectWebsiteEntertainmentServicesByActivityId" parameterType="Long" resultMap="WebsiteEntertainmentServicesResult">
        <include refid="selectWebsiteEntertainmentServicesVo"/>
        where activity_id = #{activityId}
    </select>
        
