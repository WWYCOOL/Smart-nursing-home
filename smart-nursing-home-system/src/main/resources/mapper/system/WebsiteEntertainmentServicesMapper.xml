<mapper namespace="com.smartnursinghome.system.mapper.WebsiteEntertainmentServicesMapper">
    
    <resultMap type="WebsiteEntertainmentServices" id="WebsiteEntertainmentServicesResult">
        <result property="activityId"    column="activity_id"    />
