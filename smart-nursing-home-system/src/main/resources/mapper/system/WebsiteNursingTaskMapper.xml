<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartnursinghome.system.mapper.WebsiteNursingTaskMapper">

    <resultMap type="WebsiteNursingTask" id="WebsiteNursingTaskResult">
        <result property="taskId"    column="task_id"    />
        <result property="elderlyId"    column="elderly_id"    />
        <result property="elderlyName"    column="elderly_name"    />
        <result property="projectId"    column="project_id"    />
        <result property="projectName"    column="project_name"    />
        <result property="projectPrice"    column="project_price"    />
        <result property="nurseId"    column="nurse_id"    />
        <result property="nurseName"    column="nurse_name"    />
        <result property="planTime"    column="plan_time"    />
        <result property="executeTime"    column="execute_time"    />
        <result property="status"    column="status"    />
        <result property="taskRemark"    column="task_remark"    />
        <result property="imageUrl"    column="image_url"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectWebsiteNursingTaskVo">
        select task_id, elderly_id, elderly_name, project_id, project_name, project_price, nurse_id, nurse_name, plan_time, execute_time, status, task_remark, image_url, create_by, create_time, update_by, update_time, remark from website_nursing_task
    </sql>

    <select id="selectWebsiteNursingTaskList" parameterType="WebsiteNursingTask" resultMap="WebsiteNursingTaskResult">
        <include refid="selectWebsiteNursingTaskVo"/>
        <where>
            <if test="elderlyId != null "> and elderly_id = #{elderlyId}</if>
            <if test="elderlyName != null  and elderlyName != ''"> and elderly_name like concat('%', #{elderlyName}, '%')</if>
            <if test="projectName != null  and projectName != ''"> and project_name like concat('%', #{projectName}, '%')</if>
            <if test="projectPrice != null "> and project_price = #{projectPrice}</if>
        </where>
    </select>

    <select id="selectWebsiteNursingTaskByTaskId" parameterType="Long" resultMap="WebsiteNursingTaskResult">
        <include refid="selectWebsiteNursingTaskVo"/>
        where task_id = #{taskId}
    </select>
    <select id="selectNur" resultType="java.util.Map">
        select nick_name, user_id from sys_user where dept_id = '200';
    </select>

    <insert id="insertWebsiteNursingTask" parameterType="WebsiteNursingTask" useGeneratedKeys="true" keyProperty="taskId">
        insert into website_nursing_task
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="elderlyId != null">elderly_id,</if>
            <if test="elderlyName != null">elderly_name,</if>
            <if test="projectId != null">project_id,</if>
            <if test="projectName != null and projectName != ''">project_name,</if>
            <if test="projectPrice != null">project_price,</if>
            <if test="nurseId != null">nurse_id,</if>
            <if test="nurseName != null and nurseName != ''">nurse_name,</if>
            <if test="planTime != null">plan_time,</if>
            <if test="executeTime != null">execute_time,</if>
            <if test="status != null">status,</if>
            <if test="taskRemark != null">task_remark,</if>
            <if test="imageUrl != null">image_url,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="elderlyId != null">#{elderlyId},</if>
            <if test="elderlyName != null">#{elderlyName},</if>
            <if test="projectId != null">#{projectId},</if>
            <if test="projectName != null and projectName != ''">#{projectName},</if>
            <if test="projectPrice != null">#{projectPrice},</if>
            <if test="nurseId != null">#{nurseId},</if>
            <if test="nurseName != null and nurseName != ''">#{nurseName},</if>
            <if test="planTime != null">#{planTime},</if>
            <if test="executeTime != null">#{executeTime},</if>
            <if test="status != null">#{status},</if>
            <if test="taskRemark != null">#{taskRemark},</if>
            <if test="imageUrl != null">#{imageUrl},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateWebsiteNursingTask" parameterType="WebsiteNursingTask">
        update website_nursing_task
        <trim prefix="SET" suffixOverrides=",">
            <if test="elderlyId != null">elderly_id = #{elderlyId},</if>
            <if test="elderlyName != null">elderly_name = #{elderlyName},</if>
            <if test="projectId != null">project_id = #{projectId},</if>
            <if test="projectName != null and projectName != ''">project_name = #{projectName},</if>
            <if test="projectPrice != null">project_price = #{projectPrice},</if>
            <if test="nurseId != null">nurse_id = #{nurseId},</if>
            <if test="nurseName != null and nurseName != ''">nurse_name = #{nurseName},</if>
            <if test="planTime != null">plan_time = #{planTime},</if>
            <if test="executeTime != null">execute_time = #{executeTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="taskRemark != null">task_remark = #{taskRemark},</if>
            <if test="imageUrl != null">image_url = #{imageUrl},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where task_id = #{taskId}
    </update>

    <delete id="deleteWebsiteNursingTaskByTaskId" parameterType="Long">
        delete from website_nursing_task where task_id = #{taskId}
    </delete>

    <delete id="deleteWebsiteNursingTaskByTaskIds" parameterType="String">
        delete from website_nursing_task where task_id in
        <foreach item="taskId" collection="array" open="(" separator="," close=")">
            #{taskId}
        </foreach>
    </delete>
</mapper>
