<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartnursinghome.system.mapper.WebsiteMedicalServicesMapper">
    <resultMap type="WebsiteMedicalServices" id="WebsiteMedicalServicesResult">
        <result property="serviceId"    column="service_id"    />
        <result property="serviceTitle"    column="service_title"    />
        <result property="serviceIcon"    column="service_icon"    />
        <result property="serviceDescription"    column="service_description"    />
        <result property="serviceTime"    column="service_time"    />
        <result property="serviceStaff"    column="service_staff"    />
        <result property="sortOrder"    column="sort_order"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectWebsiteMedicalServicesVo">
        select service_id, service_title, service_icon, service_description, service_time, service_staff, sort_order, status, create_by, create_time, update_by, update_time, remark from website_medical_services
    </sql>

    <select id="selectWebsiteMedicalServicesList" parameterType="WebsiteMedicalServices" resultMap="WebsiteMedicalServicesResult">
        <include refid="selectWebsiteMedicalServicesVo"/>
        <where>  
            <if test="serviceTitle != null and serviceTitle != ''">
                AND service_title like concat('%', #{serviceTitle}, '%')
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        order by sort_order asc, create_time desc
    </select>
    
    <select id="selectWebsiteMedicalServicesByServiceId" parameterType="Long" resultMap="WebsiteMedicalServicesResult">
        <include refid="selectWebsiteMedicalServicesVo"/>
        where service_id = #{serviceId}
    </select>
            
    <insert id="insertWebsiteMedicalServices" parameterType="WebsiteMedicalServices" useGeneratedKeys="true" keyProperty="serviceId">
        insert into website_medical_services
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="serviceTitle != null and serviceTitle != ''">service_title,</if>
            <if test="serviceIcon != null and serviceIcon != ''">service_icon,</if>
            <if test="serviceDescription != null and serviceDescription != ''">service_description,</if>
            <if test="serviceTime != null and serviceTime != ''">service_time,</if>
            <if test="serviceStaff != null and serviceStaff != ''">service_staff,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="serviceTitle != null and serviceTitle != ''">#{serviceTitle},</if>
            <if test="serviceIcon != null and serviceIcon != ''">#{serviceIcon},</if>
            <if test="serviceDescription != null and serviceDescription != ''">#{serviceDescription},</if>
            <if test="serviceTime != null and serviceTime != ''">#{serviceTime},</if>
            <if test="serviceStaff != null and serviceStaff != ''">#{serviceStaff},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateWebsiteMedicalServices" parameterType="WebsiteMedicalServices">
        update website_medical_services
        <trim prefix="SET" suffixOverrides=",">
            <if test="serviceTitle != null and serviceTitle != ''">service_title = #{serviceTitle},</if>
            <if test="serviceIcon != null and serviceIcon != ''">service_icon = #{serviceIcon},</if>
            <if test="serviceDescription != null and serviceDescription != ''">service_description = #{serviceDescription},</if>
            <if test="serviceTime != null and serviceTime != ''">service_time = #{serviceTime},</if>
            <if test="serviceStaff != null and serviceStaff != ''">service_staff = #{serviceStaff},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where service_id = #{serviceId}
    </update>

    <delete id="deleteWebsiteMedicalServicesByServiceId" parameterType="Long">
        delete from website_medical_services where service_id = #{serviceId}
    </delete>

    <delete id="deleteWebsiteMedicalServicesByServiceIds" parameterType="String">
        delete from website_medical_services where service_id in 
        <foreach item="serviceId" collection="array" open="(" separator="," close=")">
            #{serviceId}
        </foreach>
    </delete>
</mapper>








