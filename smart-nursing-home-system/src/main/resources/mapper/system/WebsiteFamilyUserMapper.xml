<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartnursinghome.system.mapper.WebsiteFamilyUserMapper">
    
    <resultMap type="WebsiteFamilyUser" id="WebsiteFamilyUserResult">
        <result property="familyId"    column="family_id"    />
        <result property="username"    column="username"    />
        <result property="password"    column="password"    />
        <result property="familyName"    column="family_name"    />
        <result property="phone"    column="phone"    />
        <result property="email"    column="email"    />
        <result property="idCard"    column="id_card"    />
        <result property="address"    column="address"    />
        <result property="relationship"    column="relationship"    />
        <result property="avatar"    column="avatar"    />
        <result property="status"    column="status"    />
        <result property="lastLoginTime"    column="last_login_time"    />
        <result property="lastLoginIp"    column="last_login_ip"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectWebsiteFamilyUserVo">
        select family_id, username, password, family_name, phone, email, id_card, address, relationship, avatar, status, last_login_time, last_login_ip, create_by, create_time, update_by, update_time, remark from website_family_user
    </sql>

    <select id="selectWebsiteFamilyUserList" parameterType="WebsiteFamilyUser" resultMap="WebsiteFamilyUserResult">
        <include refid="selectWebsiteFamilyUserVo"/>
        <where>  
            <if test="username != null  and username != ''"> and username like concat('%', #{username}, '%')</if>
            <if test="familyName != null  and familyName != ''"> and family_name like concat('%', #{familyName}, '%')</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="email != null  and email != ''"> and email = #{email}</if>
            <if test="idCard != null  and idCard != ''"> and id_card = #{idCard}</if>
            <if test="relationship != null  and relationship != ''"> and relationship = #{relationship}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectWebsiteFamilyUserByFamilyId" parameterType="Long" resultMap="WebsiteFamilyUserResult">
        <include refid="selectWebsiteFamilyUserVo"/>
        where family_id = #{familyId}
    </select>

    <select id="selectWebsiteFamilyUserByUsername" parameterType="String" resultMap="WebsiteFamilyUserResult">
        <include refid="selectWebsiteFamilyUserVo"/>
        where username = #{username}
    </select>

    <select id="selectWebsiteFamilyUserByPhone" parameterType="String" resultMap="WebsiteFamilyUserResult">
        <include refid="selectWebsiteFamilyUserVo"/>
        where phone = #{phone}
    </select>
        
    <insert id="insertWebsiteFamilyUser" parameterType="WebsiteFamilyUser" useGeneratedKeys="true" keyProperty="familyId">
        insert into website_family_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null and username != ''">username,</if>
            <if test="password != null and password != ''">password,</if>
            <if test="familyName != null and familyName != ''">family_name,</if>
            <if test="phone != null and phone != ''">phone,</if>
            <if test="email != null">email,</if>
            <if test="idCard != null">id_card,</if>
            <if test="address != null">address,</if>
            <if test="relationship != null">relationship,</if>
            <if test="avatar != null">avatar,</if>
            <if test="status != null">status,</if>
            <if test="lastLoginTime != null">last_login_time,</if>
            <if test="lastLoginIp != null">last_login_ip,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="username != null and username != ''">#{username},</if>
            <if test="password != null and password != ''">#{password},</if>
            <if test="familyName != null and familyName != ''">#{familyName},</if>
            <if test="phone != null and phone != ''">#{phone},</if>
            <if test="email != null">#{email},</if>
            <if test="idCard != null">#{idCard},</if>
            <if test="address != null">#{address},</if>
            <if test="relationship != null">#{relationship},</if>
            <if test="avatar != null">#{avatar},</if>
            <if test="status != null">#{status},</if>
            <if test="lastLoginTime != null">#{lastLoginTime},</if>
            <if test="lastLoginIp != null">#{lastLoginIp},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateWebsiteFamilyUser" parameterType="WebsiteFamilyUser">
        update website_family_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="username != null and username != ''">username = #{username},</if>
            <if test="password != null and password != ''">password = #{password},</if>
            <if test="familyName != null and familyName != ''">family_name = #{familyName},</if>
            <if test="phone != null and phone != ''">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="idCard != null">id_card = #{idCard},</if>
            <if test="address != null">address = #{address},</if>
            <if test="relationship != null">relationship = #{relationship},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="status != null">status = #{status},</if>
            <if test="lastLoginTime != null">last_login_time = #{lastLoginTime},</if>
            <if test="lastLoginIp != null">last_login_ip = #{lastLoginIp},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where family_id = #{familyId}
    </update>

    <delete id="deleteWebsiteFamilyUserByFamilyId" parameterType="Long">
        delete from website_family_user where family_id = #{familyId}
    </delete>

    <delete id="deleteWebsiteFamilyUserByFamilyIds" parameterType="String">
        delete from website_family_user where family_id in 
        <foreach item="familyId" collection="array" open="(" separator="," close=")">
            #{familyId}
        </foreach>
    </delete>

    <select id="hasApprovedRelation" parameterType="Long" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM website_family_elderly_relation
        WHERE family_id = #{familyId} AND bind_status = '1'
    </select>
    
    <select id="getFamilyIdByElderlyId" parameterType="Long" resultType="Long">
        SELECT family_id
        FROM website_family_elderly_relation
        WHERE elderly_id = #{elderlyId} AND bind_status = '1'
        LIMIT 1
    </select>

    <select id="selectWebsiteFamilyUserCount" resultType="int">
        select count(*) from website_family_user
    </select>
</mapper>
