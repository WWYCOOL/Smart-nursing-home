<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartnursinghome.system.mapper.WebsiteNewsMapper">
    
    <resultMap type="WebsiteNews" id="WebsiteNewsResult">
        <result property="newsId"    column="news_id"    />
        <result property="title"    column="title"    />
        <result property="summary"    column="summary"    />
        <result property="content"    column="content"    />
        <result property="category"    column="category"    />
        <result property="imageUrl"    column="image_url"    />
        <result property="isFeatured"    column="is_featured"    />
        <result property="views"    column="views"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectWebsiteNewsVo">
        select news_id, title, summary, content, category, image_url, is_featured, views, status, create_by, create_time, update_by, update_time, remark from website_news
    </sql>

    <select id="selectWebsiteNewsList" parameterType="WebsiteNews" resultMap="WebsiteNewsResult">
        <include refid="selectWebsiteNewsVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="summary != null  and summary != ''"> and summary like concat('%', #{summary}, '%')</if>
            <if test="content != null  and content != ''"> and content like concat('%', #{content}, '%')</if>
            <if test="category != null  and category != ''"> and category = #{category}</if>
            <if test="imageUrl != null  and imageUrl != ''"> and image_url = #{imageUrl}</if>
            <if test="isFeatured != null  and isFeatured != ''"> and is_featured = #{isFeatured}</if>
            <if test="views != null "> and views = #{views}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by is_featured desc, create_time desc
    </select>
    
    <select id="selectWebsiteNewsByNewsId" parameterType="Long" resultMap="WebsiteNewsResult">
        <include refid="selectWebsiteNewsVo"/>
        where news_id = #{newsId}
    </select>
        
    <insert id="insertWebsiteNews" parameterType="WebsiteNews" useGeneratedKeys="true" keyProperty="newsId">
        insert into website_news
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="summary != null">summary,</if>
            <if test="content != null">content,</if>
            <if test="category != null">category,</if>
            <if test="imageUrl != null">image_url,</if>
            <if test="isFeatured != null">is_featured,</if>
            <if test="views != null">views,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="summary != null">#{summary},</if>
            <if test="content != null">#{content},</if>
            <if test="category != null">#{category},</if>
            <if test="imageUrl != null">#{imageUrl},</if>
            <if test="isFeatured != null">#{isFeatured},</if>
            <if test="views != null">#{views},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateWebsiteNews" parameterType="WebsiteNews">
        update website_news
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="summary != null">summary = #{summary},</if>
            <if test="content != null">content = #{content},</if>
            <if test="category != null">category = #{category},</if>
            <if test="imageUrl != null">image_url = #{imageUrl},</if>
            <if test="isFeatured != null">is_featured = #{isFeatured},</if>
            <if test="views != null">views = #{views},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where news_id = #{newsId}
    </update>

    <delete id="deleteWebsiteNewsByNewsId" parameterType="Long">
        delete from website_news where news_id = #{newsId}
    </delete>

    <delete id="deleteWebsiteNewsByNewsIds" parameterType="String">
        delete from website_news where news_id in 
        <foreach item="newsId" collection="array" open="(" separator="," close=")">
            #{newsId}
        </foreach>
    </delete>

    <update id="updateWebsiteNewsViews" parameterType="WebsiteNews">
        update website_news 
        set views = #{views}
        where news_id = #{newsId}
    </update>

    <select id="selectWebsiteNewsCount" resultType="int">
        select count(*) from website_news
    </select>
</mapper>





